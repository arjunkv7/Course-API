<section class="p-4 topmargin"  style="background-color: #eee; height: 650px;">
    <div class="container col-4 text-center bg-white " style="border-radius:25px ;margin-top:110px; ">
        <div class="pt-3 ">
            <h1>Login</h1>
        </div>

        <div class="pt-3 pl-5 pr-5 pb-3">
            <div class="form-group ">
                {{#if error}}
                <p class="error text-danger ">{{error}}</p>
                {{/if}}
                <form action="/login" method="POST">

                    <div class="p-2">
                        <input class="form-control  " type="text" required placeholder="User Name" name="username">
                    </div>

                    <div class="p-2 ">
                        <input class="form-control " type="password" required placeholder="Password" name="password">
                    </div>

                    <div class="p-2">
                        <input type="submit" value="Login" class="btn btn-primary pt-2">
                    </div>
                    

                </form>
               
            </div>
        </div>


    </div>
</section>